import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner in= new Scanner(System.in);
        int n=in.nextInt();
        int arr[]=new int[n];
        
        for(int i=0;i<n;i++){
            arr[i]=in.nextInt();
        }
        
        int prefix[] =new int[n];
        prefix[0]=arr[0];
        
        for(int i=1;i<n;i++){
            prefix[i]=prefix[i-1]+arr[i];
        }
        
        for (int i=0;i<n;i++){
            System.out.println(prefix[i]);
        }
    }
}

i/p -2 4 6 8 10
o/p - 2 6 12 20 30
